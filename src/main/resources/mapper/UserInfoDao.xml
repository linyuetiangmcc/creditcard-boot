<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmcc.creditcard.dao.UserInfoDao">
    <select id="queryUserInfoList" resultType="com.cmcc.creditcard.entity.UserInfo">
		SELECT *
		FROM tb_userinfo
		ORDER BY user_id
	</select>
    <select id="queryUserInfoByUserId" resultType="com.cmcc.creditcard.entity.UserInfo">
		SELECT *
		FROM tb_userinfo
		WHERE
		user_id=#{userId}
	</select>

    <select id="queryUserInfoByOpenId" resultType="com.cmcc.creditcard.entity.UserInfo">
		SELECT *
		FROM tb_userinfo
		WHERE
		open_id=#{openId}
	</select>

    <insert id="insertUserInfo" useGeneratedKeys="true" keyProperty="userId"
            keyColumn="user_id" parameterType="com.cmcc.creditcard.entity.UserInfo">
		INSERT INTO
		tb_userinfo(user_id,open_id,create_time,update_time,tel_number,avatar_url,city,country,gender,userlanguage,nick_name,province,status)
		VALUES
		(#{userId},#{openId},#{createTime},#{updateTime},#{telNumber},#{avatarUrl},#{city},#{country},#{gender},#{language},#{nickName},#{province},#{status})
	</insert>
    <update id="updateUserInfo" parameterType="com.cmcc.creditcard.entity.UserInfo">
        update tb_userinfo
        <set>
            <if test="openId != null">open_id=#{openId},</if>
            <if test="createTime != null">create_time=#{createTime},</if>
			<if test="updateTime != null">update_time=#{updateTime},</if>
            <if test="telNumber != null">tel_number=#{telNumber},</if>
			<if test="avatarUrl != null">avatar_url=#{avatarUrl},</if>
			<if test="city != null">city=#{city},</if>
			<if test="country != null">country=#{country},</if>
			<if test="gender != null">gender=#{gender},</if>
			<if test="language != null">userlanguage=#{language},</if>
			<if test="nickName != null">nick_name=#{nickName},</if>
			<if test="province != null">province=#{province},</if>
			<if test="status != null">status=#{status},</if>
        </set>
        where user_id=#{userId}
    </update>
    <delete id="deleteUserInfoByUserId">
		DELETE FROM
		tb_userinfo
		WHERE
		user_id =
		#{userId}
	</delete>

	<delete id="deleteUserInfoByOpenId">
		DELETE FROM
		tb_userinfo
		WHERE
		open_id =
		#{openId}
	</delete>
</mapper>